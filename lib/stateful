import 'package:flutter/material.dart';
void main() => runApp(const ColorChangeApp());
class ColorChangeApp extends StatefulWidget {
  const ColorChangeApp({super.key});
  @override
  State<ColorChangeApp> createState() => _ColorChangeAppState();
}
class _ColorChangeAppState extends State<ColorChangeApp> {
  Color _bgColor = Colors.white;
  @override
  void initState() {
    super.initState();
  }
  void _changeColor() {
    setState(() {
      _bgColor = _bgColor == Colors.white ? Colors.blue.shade100 : Colors.white;
    });
  }
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: const Text("Đổi màu nền")),
        body: AnimatedContainer(
          duration: const Duration(milliseconds: 400),
          color: _bgColor,
          child: Center(
            child: ElevatedButton(
              onPressed: _changeColor,
              child: const Text("Đổi màu"),),),),),);}
  @override
  void dispose() {
    super.dispose();}
}
